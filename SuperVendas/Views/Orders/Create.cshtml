@model SuperVendas.Models.Order

@{
    ViewData["Title"] = "Create";
}

<div class="container viewIndex">
    <h1>Cadastrar Pedido</h1>
    <hr />

    <div class="row">
        <div class="col-md">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EntryDate" class="control-label"></label>
                    <input asp-for="EntryDate" class="form-control" />
                    <span asp-validation-for="EntryDate" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ClientId" class="control-label mb-2">Cliente</label>
                    <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="EmployeeId" class="control-label mb-2">Funcionário</label>
                    <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ProductId" class="control-label mb-2">Produto</label>
                    <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Quantity" class="control-label mb-2"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Price" class="control-label mb-2"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <label asp-for="PaymentMethod" class="control-label mb-2"></label>
                <select class="form-select mb-3" asp-for="PaymentMethod" aria-label="Default select example">
                    <option value="Crédito">Crédito</option>
                    <option value="Débito">Débito</option>
                    <option value="PIX">PIX</option>
                    <option value="Boleto">Boleto</option>
                </select>
                <div class="form-group">
                    <input type="submit" value="Cadastrar" class="btn btn-superVendas mt-2 w-100" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-back w-100 mt-1">Voltar</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
