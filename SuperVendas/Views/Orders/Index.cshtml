@model IEnumerable<SuperVendas.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-4 viewIndex">

    <h1>Controle de Pedidos</h1>

    <table class="table table-hover customTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Client)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employee)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentMethod)
                </th>
                <th class="text-center"><a asp-action="Create" class="ms-4 px-5 btn btn-superVendas">Cadastrar</a></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Client.ClientName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee.ClientName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentMethod)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" class="btn btn-edit" asp-route-id="@item.OrderId">Editar</a>
                        <a asp-action="Details" class="btn btn-details" asp-route-id="@item.OrderId">Info</a>
                        <a asp-action="Delete" class="btn btn-delete" asp-route-id="@item.OrderId">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>