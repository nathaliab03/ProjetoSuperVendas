@model SuperVendas.Models.AccessLevel

@{
    ViewData["Title"] = "Create";
}

<div class="container viewIndex">
<h1>Cadastrar Nível de Acesso</h1>
<hr />

    <div class="row">
        <div class="col-md">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="AccessLevelName" class="control-label mb-2"></label>
                    <input asp-for="AccessLevelName" class="form-control mb-3" />
                    <span asp-validation-for="AccessLevelName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AccessLevelType" class="control-label mb-2"></label>
                    <input asp-for="AccessLevelType" class="form-control mb-3" />
                    <span asp-validation-for="AccessLevelType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Cadastrar" class="btn btn-superVendas mt-2 w-100" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-back w-100 mt-1">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
