@model SuperVendas.Models.AccessLevel

@{
    ViewData["Title"] = "Delete";
}


<div class="container p-4 viewIndex text-center">
    <h1>Deletar Acesso</h1>
    <h3>Tem certeza que deseja deletar?</h3>
    <table class="table col-2 table-hover">
        <tr>
            <th scope="col" class="text-end col-6">
                @Html.DisplayNameFor(model => model.AccessLevelName)
            </th>

            <td scope="col" class="text-start">
                @Html.DisplayFor(model => model.AccessLevelName)
            </td>

        </tr>

        <tr>
            <th scope="col" class="text-end">
                @Html.DisplayNameFor(model => model.AccessLevelType)
            </th>

            <td scope="col" class="text-start">
                @Html.DisplayFor(model => model.AccessLevelType)
            </td>

        </tr>
    </table>

    <form asp-action="Delete" class="row">
        <input type="hidden" asp-for="AccessLevelId" />
        <input type="submit" value="Delete" class="btn btn-danger mb-1" />
        <a asp-action="Index" class="btn btn-backDelete">Back to List</a>
    </form>

</div>
