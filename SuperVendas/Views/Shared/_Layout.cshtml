<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SuperVendas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SuperVendas.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow p-3">
            <div class="container-fluid">
                <a class="navbar-brand text-navSuperVendas" asp-area="" asp-controller="Home" asp-action="Index">SuperVendas</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link text-navSuperVendas text-uppercase @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house"> </i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-navSuperVendas text-uppercase @(ViewContext.RouteData.Values["Controller"].ToString() == "Clients" ? "active" : "")" asp-area="" asp-controller="Clients" asp-action="Index"><i class="bi bi-person-heart"> </i> Cliente</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-navSuperVendas text-uppercase @(ViewContext.RouteData.Values["Controller"].ToString() == "Employees" ? "active" : "")" asp-area="" asp-controller="Employees" asp-action="Index"><i class="bi bi-person-vcard-fill"> </i> Funcionário</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-navSuperVendas text-uppercase @(ViewContext.RouteData.Values["Controller"].ToString() == "Products" ? "active" : "")" asp-area="" asp-controller="Products" asp-action="Index"><i class="bi bi-box-seam-fill"> </i> Produtos</a></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-navSuperVendas text-uppercase @(ViewContext.RouteData.Values["Controller"].ToString() == "Categories" ? "active" : "")" asp-area="" asp-controller="Categories" asp-action="Index"><i class="bi bi-ui-checks"> </i> Categorias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-navSuperVendas text-uppercase @(ViewContext.RouteData.Values["Controller"].ToString() == "Logins" ? "active" : "")" asp-area="" asp-controller="Logins" asp-action="Index"><i class="bi bi-box-arrow-in-left"> </i> Logins</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-navSuperVendas text-uppercase @(ViewContext.RouteData.Values["Controller"].ToString() == "AccessLevels" ? "active" : "")" asp-area="" asp-controller="AccessLevels" asp-action="Index"><i class="bi bi-key"> </i> Acessos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-navSuperVendas text-uppercase @(ViewContext.RouteData.Values["Controller"].ToString() == "Orders" ? "active" : "")" asp-area="" asp-controller="Orders" asp-action="Index"><i class="bi bi-receipt"> </i> Pedido</a></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-navSuperVendas text-uppercase @(ViewContext.RouteData.Values["Controller"].ToString() == "SalesReports" ? "active" : "")" asp-area="" asp-controller="SalesReports" asp-action="Index"><i class="bi bi-graph-up-arrow"> </i> Relatórios</a>
                        </li>
                    </ul>
                    <span class="nav-item">
                        <a class="nav-link text-navSuperVendas text-uppercase" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-box-arrow-right"></i> Sair</a></a>
                    </span>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>


    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2024 - SuperVendas - Desenvolvido por Alexia Henrique <a href="https://github.com/nathaliab03"><i class="bi bi-github"></i></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
