@model IEnumerable<SuperVendas.Models.SalesReport>

@{
    ViewData["Title"] = "Index";
}

<div class="container  p-4 viewIndex">

    <h1>Controle de Relatórios</h1>

    <table class="table table-hover customTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Product)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InitialDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SalesTotal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SalesRevenue)
                </th>
                <th class="text-center"><a asp-action="Create" class="ms-4 px-5 btn btn-superVendas">Cadastrar</a></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InitialDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SalesTotal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SalesRevenue)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" class="btn btn-edit" asp-route-id="@item.ProductId">Editar</a>
                        <a asp-action="Details" class="btn btn-details" asp-route-id="@item.ProductId">Info</a>
                        <a asp-action="Delete" class="btn btn-delete" asp-route-id="@item.ProductId">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
