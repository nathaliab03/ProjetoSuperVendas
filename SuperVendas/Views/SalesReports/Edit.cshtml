@model SuperVendas.Models.SalesReport

@{
    ViewData["Title"] = "Edit";
}

<div class="container p-4 viewIndex">
    <h1>Editar Relatório</h1>
    <hr />
    <div class="row">
        <div class="col-md">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SalesReportId" />
                <div class="row">

                    <div class="form-group col-md mb-3">
                        <label asp-for="InitialDate" class="control-label mb-2"></label>
                        <input asp-for="InitialDate" class="form-control" />
                        <span asp-validation-for="InitialDate" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md mb-3">
                        <label asp-for="EndDate" class="control-label mb-2"></label>
                        <input asp-for="EndDate" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ProductId" class="control-label mb-2"></label>
                    <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="SalesTotal" class="control-label mb-2"></label>
                    <input asp-for="SalesTotal" class="form-control" />
                    <span asp-validation-for="SalesTotal" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="SalesRevenue" class="control-label mb-2"></label>
                    <input asp-for="SalesRevenue" class="form-control" />
                    <span asp-validation-for="SalesRevenue" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Salvar" class="btn w-100 btn-superVendas" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-1">
        <a asp-action="Index" class="btn btn-back w-100">Voltar</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
