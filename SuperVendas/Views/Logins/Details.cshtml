@model SuperVendas.Models.Login

@{
    ViewData["Title"] = "Details";
}

<div class="container p-4 viewIndex text-center">
    <h1>Detalhes do Login</h1>
    <table class="table col-2 table-hover">
        <tr>
            <th scope="col" class="text-end">
                @Html.DisplayNameFor(model => model.Username)
            </th>

            <td scope="col" class="text-start">
                @Html.DisplayFor(model => model.Username)
            </td>

        </tr>

        <tr>
            <th scope="col" class="text-end">
                @Html.DisplayNameFor(model => model.Password)
            </th>

            <td scope="col" class="text-start">
                @Html.DisplayFor(model => model.Password)
            </td>

        </tr>

        <tr>
            <th scope="col" class="text-end">
                @Html.DisplayNameFor(model => model.AccessLevel)
            </th>

            <td scope="col" class="text-start">
                @Html.DisplayFor(model => model.AccessLevel.AccessLevelName)
            </td>

        </tr>
    </table>
    <div class="row">
        <a asp-action="Edit" class="btn btn-edit mb-1 " asp-route-id="@Model?.LoginId">Editar</a>
        <a asp-action="Index" class="btn btn-back ">Voltar à Lista</a>
    </div>
</div>
