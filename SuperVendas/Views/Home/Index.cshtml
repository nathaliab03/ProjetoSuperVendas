@{
    ViewData["Title"] = "Home Page";
}

<div class="container" id="signUpContainer">
    <h1 class="text-center">Entrar</h1>
    <form class="mx-auto px-md-3">
        <div class="form-floating mb-3">
            <input type="email" class="form-control" id="floatingInput" placeholder="nome@example.com">
            <label for="floatingInput">E-mail</label>
        </div>
        <div class="form-floating mb-3">
            <input type="password" class="form-control" id="floatingPassword" placeholder="Senha">
            <label for="floatingPassword">Senha</label>
        </div>

        <div class="d-flex py-md-3 justify-content-between align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">
                <input class="form-check-input me-2" type="checkbox" value="" id="rememberMeInput" />
                <label class="form-check-label" for="rememberMeInput">
                    Lembre-se de mim
                </label>
            </div>
            <a href="#!" class="text-body">Esqueceu a Senha?</a>
        </div>

        <button class="btn btn-superVendas w-100">Entrar</button>
    </form>

</div>