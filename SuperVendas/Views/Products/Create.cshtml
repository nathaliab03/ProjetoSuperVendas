@model SuperVendas.Models.Product

@{
    ViewData["Title"] = "Create";
}

<div class="container viewIndex">
    <h1>Cadastrar Pedido</h1>
    <hr />

    <div class="row">
        <div class="col-md">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="ProductName" class="control-label mb-2"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CategoryId" class="control-label mb-2"></label>
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProductBrand" class="control-label mb-2"></label>
                <input asp-for="ProductBrand" class="form-control" />
                <span asp-validation-for="ProductBrand" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProductModel" class="control-label mb-2"></label>
                <input asp-for="ProductModel" class="form-control" />
                <span asp-validation-for="ProductModel" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label mb-2"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Stock" class="control-label mb-2"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <input type="submit" value="Cadastrar" class="btn btn-superVendas mt-2 w-100" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-back w-100 mt-1">Voltar</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
