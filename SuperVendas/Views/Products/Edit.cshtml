@model SuperVendas.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<div class="container p-4 viewIndex">
    <h1>Editar Produtos</h1>
    <hr />
    <div class="row">
    <div class="col-md">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group mb-3">
                <label asp-for="ProductName" class="control-label mb-2"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CategoryId" class="control-label mb-2"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProductBrand" class="control-label mb-2"></label>
                <input asp-for="ProductBrand" class="form-control" />
                <span asp-validation-for="ProductBrand" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProductModel" class="control-label mb-2"></label>
                <input asp-for="ProductModel" class="form-control" />
                <span asp-validation-for="ProductModel" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label mb-2"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Stock" class="control-label mb-2"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Salvar" class="btn w-100 btn-superVendas" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-1">
        <a asp-action="Index" class="btn btn-back w-100">Voltar</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
